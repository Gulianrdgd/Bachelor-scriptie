<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginBottom="100dp"
            android:orientation="vertical"
            android:weightSum="5">


            <Button
                android:id="@+id/record_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="record voice" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The output of the model"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="1">

                <TextView
                    android:id="@+id/up"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Up" />

                <TextView
                    android:id="@+id/down"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Down" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="1">

                <TextView
                    android:id="@+id/left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Left" />

                <TextView
                    android:id="@+id/right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="1">

                <TextView
                    android:id="@+id/go"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Go" />

                <TextView
                    android:id="@+id/stop"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Stop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="1">

                <TextView
                    android:id="@+id/on"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="On" />

                <TextView
                    android:id="@+id/off"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Off" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:weightSum="1">


                <TextView
                    android:id="@+id/background"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:background="@drawable/round_corner_text_bg_unselected"
                    android:gravity="center"
                    android:text="Background" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_gravity="top"
            android:background="@color/tfe_color_primary"
            android:padding="10dp"
            android:text="Say one of the words below!"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tfl2_logo_dark" />
        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <include
        android:id="@+id/bottom_sheet_layout"
        layout="@layout/tfe_sc_layout_bottom_sheet" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
